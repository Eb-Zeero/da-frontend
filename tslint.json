{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "member-access": {
      "severity": "off"
    },
    "no-console": [false],
    "jsx-no-lambda": false,
    "indent": [
      true,
      "spaces",
      2
    ]
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}
